<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Customer\Block\Account\SortLinkInterface" name="customer-account-navigation-link-guest-orders" ifconfig="customer/link_guest_orders/enabled">
                <arguments>
                    <argument name="path" xsi:type="string">linkguestorders/order/find</argument>
                    <argument name="label" xsi:type="string">Link Guest Orders</argument>
                    <argument name="sortOrder" xsi:type="number">10</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
